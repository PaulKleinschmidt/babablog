<h1>{{post.title}}</h1>
<h3>{{post.content}}</h3>

{{#if post.editable}}
<form {{action 'updatePost' on='submit'}} >
  {{input value=post.title placeholder='Title'}}
  {{textarea value=post.content placeholder='Content'}}
  <button class="submit" type="submit">Save</button>
  {{message}}
</form>
{{/if}}

<h4>{{post.comments.length}}<span> comments</span></h4>
{{#each post.comments as |comment|}}
  {{single-post/comment comment=comment}}
{{/each}}
